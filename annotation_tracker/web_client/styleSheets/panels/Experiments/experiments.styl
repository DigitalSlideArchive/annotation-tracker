.experiment-task-list
    overflow hidden
.experiment-section-list
    border-bottom-styling inset
.experiment-section-list-header
    font-weight 700
    padding 5px

.experiment-section-list-header:hover
    background-color #eee

.experiment-section-list-controls
    float right

.h-task-item
    padding 2px
    margin-left 5px
.h-task-item:hover
    background-color #eee


.h-task-tooltip
    position relative
    .h-task-tooltiptext
        visibility hidden
        background-color black
        color #fff
        text-align center
        padding 5px
        top 0
        position absolute
        z-index 1
        border white 1px solid

.h-task-tooltip:hover .h-task-tooltiptext
  visibility visible

.card
    padding 10px
    border 1px #eee solid

.card-title
    font-weight 700
    font-size 1.2em