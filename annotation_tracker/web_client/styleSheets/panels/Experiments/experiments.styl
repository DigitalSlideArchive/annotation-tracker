.experiment-task-list
    overflow hidden
    margin-top 5px
.experiment-section-list
    border-bottom-style inset
.experiment-section-list-header
    font-weight 700
    padding 5px

.experiment-section-list-header:hover
    background-color #eee

.experiment-section-list-controls
    float right

.experiment-section-content
    padding 5px

.experiment-session-button
    margin 10px

.start-session
    background-color #9efd9e
.stop-session
    background-color #fba0a0

.h-task-item
    padding 2px
    margin-left 5px

.h-task-item:hover
    background-color #eee

.h-task-radio-text
    margin-left 5px 
.task-description-card
    padding 10px
    border 1px #eee solid

.task-description-card-title
    font-weight 700
    font-size 1.2em

.task-active
    background-color #9efd9e
.task-active:hover
    background-color #5ccc5c
.task-inactive
    background-color #fbf89f
.task-inactive:hover
    background-color #e4e068

.experiment-notify
    animation: pulse 1s 3

@keyframes pulse
  0%
    opacity: 1;
  50%
    opacity: 0;
  100%
    opacity: 1;
